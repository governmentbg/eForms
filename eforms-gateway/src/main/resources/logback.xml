<?xml version="1.0"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="requests-log" class="ch.qos.logback.core.FileAppender">
        <file>requests.log</file>
        <append>true</append>
        <encoder>
            <pattern>%msg %date{ISO8601} %n</pattern>
        </encoder>
    </appender>
    <logger name="com.bulpros.eformsgateway.handler.RequestLogger" level="INFO" additivity="false">
        <appender-ref ref="requests-log"/>
    </logger>
    <root>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
