<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema
        targetNamespace="http://eform.e-gov.bg/dictionary/CyrillicNameType"
        xmlns="http://eform.e-gov.bg/dictionary/CyrillicNameType"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <xsd:simpleType name="CyrillicNameType">
        <xsd:annotation>
            <xsd:documentation xml:lang="bg">Име на лице, населено място и т.н. на кирилица</xsd:documentation>
        </xsd:annotation>
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="[А-Яа-я]+([' \-А-Яа-я]+)*" />
        </xsd:restriction>
    </xsd:simpleType>

</xsd:schema>